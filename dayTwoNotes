// sTRING FUNCTIONS.
var text = "  hello"; 

// Convert the string to uppercase and print it.
Console.WriteLine(text.ToUpper()); // Output: "  HELLO"

// Convert the string to lowercase and print it.
Console.WriteLine(text.ToLower()); // Output: "  hello"

// Convert the string to uppercase invariant culture and print it.
Console.WriteLine(text.ToUpperInvariant()); // Output: "  HELLO"

// Replace spaces with hyphens and print the result.
Console.WriteLine(text.Replace(" ", "-")); // Output: "--hello"

// Remove the first 3 characters from the string and print the result.
Console.WriteLine(text.Remove(0, 3)); // Output: "hello"

// Check if the string contains the substring "hello" and print the result.
Console.WriteLine(text.Contains("hello")); // Output: "True"

// Check if the string starts with "  hello" and print the result.
Console.WriteLine(text.StartsWith("  hello")); // Output: "True"

// Check if the string ends with "hello" and print the result.
Console.WriteLine(text.EndsWith("hello")); // Output: "True"

// Convert the string to a character array and print the characters as a comma-separated string.
char[] chars = text.ToCharArray(); // Corrected variable name from 'char' to 'chars'
Console.WriteLine(string.Join(",", chars)); // Output: " ,h,e,l,l,o"


var texts = "  hello  ";

// Trim whitespace from both ends of the string and print the result.
Console.WriteLine(texts.Trim()); // Output: "hello"

// Trim whitespace from the start of the string and print the result.
Console.WriteLine(texts.TrimStart()); // Output: "hello  "

// Trim whitespace from the end of the string and print the result.
Console.WriteLine(texts.TrimEnd()); // Output: "  hello"



 
